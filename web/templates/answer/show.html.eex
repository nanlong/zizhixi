<h2>Show answer</h2>

<ul>

  <li>
    <strong>Content:</strong>
    <%= @answer.content %>
  </li>

  <li>
    <strong>Question:</strong>
    <%= @answer.question_id %>
  </li>

  <li>
    <strong>User:</strong>
    <%= @answer.user_id %>
  </li>

</ul>

<%= link "Edit", to: answer_path(@conn, :edit, @answer) %>
<%= link "Back", to: answer_path(@conn, :index) %>
