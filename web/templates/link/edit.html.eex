<div class="columns">
  <div class="column">
    <div class="box">
      <%= render "form.html",
        changeset: @changeset,
        action: link_path(@conn, :update, @link),
        categories: @categories
      %>
    </div>
  </div>
  <div class="column is-3">
    <%= link to: link_category_path(@conn, :index), class: "button is-link" do %>
      <span>返回</span>
      <span class="icon is-small">
        <i class="fa fa-arrow-right"></i>
      </span>
    <%= end %>
  </div>
</div>
