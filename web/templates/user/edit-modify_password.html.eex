<h2>修改密码</h2>

<%= form_for @changeset, user_path(@conn, :update, @user.username, action: "modify_password"), fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :old_password, "原密码", class: "label" %>
  <p class="control">
    <%= password_input f, :old_password, class: "input" %>
    <%= error_tag f, :old_password %>
  </p>

  <%= label f, :password, "新密码", class: "label" %>
  <p class="control">
    <%= password_input f, :password, class: "input" %>
    <%= error_tag f, :password %>
  </p>

  <%= label f, :password_confirmation, "再次输入新密码", class: "label" %>
  <p class="control">
    <%= password_input f, :password_confirmation, class: "input" %>
    <%= error_tag f, :password_confirmation %>
  </p>

  <p class="control">
    <button class="button is-primary">确定</button>
  </p>
<% end %>
