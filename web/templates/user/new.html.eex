<div class="columns">
  <div class="column is-4 is-offset-4">
    <div class="box">
      <%= form_for @changeset, user_path(@conn, :create), fn f -> %>

        <%= label f, :username, "用户名", class: "label" %>
        <p class="control">
          <%= text_input f, :username, class: "input" %>
          <%= error_tag f, :username %>
        </p>

        <%= label f, :email, "邮箱", class: "label" %>
        <p class="control">
          <%= text_input f, :email, class: "input" %>
          <%= error_tag f, :email %>
        </p>

        <%= label f, :password, "密码", class: "label" %>
        <p class="control">
          <%= password_input f, :password, class: "input" %>
          <%= error_tag f, :password %>
        </p>

        <p class="control">
          <button class="button is-info is-fullwidth" type="submit">注册</button>
        </p>
      <% end %>
    </div>
  </div>
</div>
