<div class="tabs" style="margin-top: 20px;">
  <ul class="is-left">
    <%= for {tab, name, path} <- tabs(@conn, @group_user) do %>
    <%= if tab == @current_tab do %>
    <li class="is-active">
    <%= else %>
    <li>
    <%= end %>
      <%= link raw(name), to: path %>
    </li>
    <%= end %>
  </ul>
</div>
