<h2>Show group
  <%= link "发布帖子", to: group_post_path(@conn, :new, @group) %>
</h2>

<ul>
  <%= for post <- @posts do %>
  <li>
    <%= link post.title, to: group_post_path(@conn, :show, @group, post) %>
  </li>
  <%= end %>
</ul>

<%= link "Edit", to: group_path(@conn, :edit, @group) %>
<%= link "Back", to: group_path(@conn, :index) %>
