<div class="columns">
  <div class="column">
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-96x96">
            <img src="<%= @group.logo %>" alt="<%= @group.name %>">
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <%= link "发新帖", to: group_post_path(@conn, :new, @group), class: "button is-info is-pulled-right" %>
            <div class="is-clearfix">
              <strong class="title is-4 is-pulled-left" style="margin-right: 10px;"><%= @group.name %></strong>
              <%= if @logged_in? do %>
                <%= if not group_own?(@conn, @group) do %>
                  <%= if group_member?(@conn, @group) do %>
                    <%= link "已加入 | 退出", to: group_member_path(@conn, :delete, @group), method: :delete, class: "button is-small is-pulled-left" %>
                  <%= else %>
                    <%= link "加入小组", to: group_member_path(@conn, :create, @group), method: :post, class: "button is-small is-pulled-left" %>
                  <%= end %>
                <%= else %>
                  <%= link "编辑", to: group_path(@conn, :edit, @group), class: "button is-small is-pulled-left" %>
                  <%= link "话题管理", to: group_topic_path(@conn, :index, @group), class: "button is-small is-pulled-left", style: "margin-left: 10px;" %>
                <%= end %>
              <%= else %>
                <%= link "加入小组", to: group_member_path(@conn, :create, @group), method: :post, class: "button is-small is-pulled-left" %>
              <%= end %>
            </div>
            <p><%= @group.member_count %>人加入此小组</p>
          </div>
          <div class="content">
            <%= @group.description %>
          </div>
        </div>
      </article>
    </div>

    <div class="tabs">
      <ul>
        <%= for {tab, name, path} <- @tabs do %>
        <%= if tab == @current_tab do %>
        <li class="is-active">
        <%= else %>
        <li>
        <%= end %>
          <%= link name, to: path %>
        </li>
        <%= end %>
      </ul>
    </div>

    <%= if @pagination.total_entries > 0 do %>
    <div class="box">
      <%= for post <- @pagination do %>
        <%= render(Zizhixi.GroupPostView, "entry.html", show_group: false, conn: @conn, post: post) %>
      <%= end %>
    </div>
    <%= pagination_links @conn, @pagination, [@group], action: :show, path: &group_path/4 %>
    <%= else %>
    <section class="hero is-primary has-text-centered">
      <div class="hero-body">
        <div class="container">
          <h1 class="title">
            本话题还没有新帖
          </h1>
          <h2 class="subtitle">
            <%= link "发新帖", to: group_post_path(@conn, :new, @group), class: "button is-danger" %>
          </h2>
        </div>
      </div>
    </section>
    <%= end %>
  </div>
  <div class="column is-3">
    <div class="panel">
      <div class="panel-heading">
        小组长
      </div>
      <div class="panel-block">
        <ul class="is-clearfix">
          <li class="is-pulled-left has-text-centered">
            <article class="media">
              <figure class="media-left">
                <p class="image is-48x48">
                  <img src="<%= @group.user.avatar %>">
                </p>
              </figure>
              <div class="media-content">
                <div class="content">
                  <%= link @group.user.username, to: user_path(@conn, :show, @group.user.username) %>
                  <div class="">
                    <small>创建时间 <%= @group.inserted_at |> from_now %></small>
                  </div>
                  <!-- <div class="">
                    <small>最后活跃 <%= @group.inserted_at |> from_now %></small>
                  </div> -->
                </div>
              </div>
            </article>
          </li>
        </ul>
      </div>
    </div>

    <%= if @group_members.total_entries > 0 do %>
    <div class="panel">
      <div class="panel-heading">
        <%= if @group_members.total_pages > 1 do %>
          <%= link "更多", to: "", class: "is-pulled-right" %>
        <%= end %>
        <%= @group.member_count - 1 %>个小组成员
      </div>
      <div class="panel-block">
        <ul class="columns is-multiline">
          <%= for m <- @group_members do %>
          <li class="column is-half has-text-centered">
            <article class="media">
              <figure class="media-left">
                <p class="image is-32x32">
                  <img src="<%= m.user.avatar %>">
                </p>
              </figure>
              <div class="media-content">
                <div class="content">
                  <%= link m.user.username, to: user_path(@conn, :show, m.user.username) %>
                  <nav class="level">
                    <div class="level-left">
                      <div class="level-item">
                        <small><%= m.inserted_at |> strftime("{0M}-{0D}") %> 加入</small>
                      </div>
                    </div>
                  </nav>
                </div>
              </div>
            </article>
          </li>
          <%= end %>
        </ul>
      </div>
    </div>
    <%= end %>
  </div>
</div>
